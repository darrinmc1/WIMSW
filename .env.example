# Google Gemini AI API Key (for image identification)
GEMINI_API_KEY=your_gemini_api_key_here

# Perplexity API Key (for market research)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Database Configuration
# PostgreSQL (Recommended for production - use Vercel Postgres or Supabase)
# DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
# DIRECT_URL=postgresql://user:password@host:5432/database?sslmode=require

# Google Sheets Integration (Legacy - will be deprecated)
# Keep these for backward compatibility during migration
GOOGLE_SHEET_ID=your_google_sheet_id
GOOGLE_CLIENT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# NextAuth.js Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET=your_nextauth_secret_here
# NEXTAUTH_URL=http://localhost:3000  # Optional in development, required in production

# Application Configuration
SUPPORT_EMAIL=support@wimsw.com  # Support email shown to users

# Upstash Redis (for rate limiting in production)
# Get free tier at https://upstash.com/ (10K requests/day free)
# For development, you can omit these and the app will use in-memory rate limiting
# UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Sentry Error Monitoring (optional, for production)
# Get your DSN from https://sentry.io/
# SENTRY_DSN=https://your-sentry-dsn-here
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here
# SENTRY_ORG=your-sentry-org
# SENTRY_PROJECT=your-sentry-project
# SENTRY_AUTH_TOKEN=your-auth-token-for-sourcemaps
